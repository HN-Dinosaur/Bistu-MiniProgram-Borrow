page{
  margin-top: 20rpx;
}
.search{
  padding: 10rpx;
}

.search .top_search_wrap{
  display: flex;
  flex-direction: row;
  margin: 20rpx;
}
.search .top_search_wrap .input_wrap{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 47%;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #fff;
}
.search .top_search_wrap .input_wrap input{
  height: 60rpx;
  width: 100%;
  padding-left: 25rpx;
}
.search .top_search_wrap .search_btn_wrap{
  display: flex;
  flex-direction: row;
  width: 50%;
  /* margin-left: 20rpx; */
}
.search .top_search_wrap .search_btn_wrap button{
  margin-left: 16rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  background-color: rgb(57, 57, 204);
  border-radius: 30px;
  color: rgb(224, 221, 221);
  font-weight: 580;
}


.product_wrap{
  margin: 20rpx;
  display: flex;
  height: 300rpx;
}
.product_wrap .product_item{
  padding: 20rpx;
  border-radius: 20rpx;
  background-color: #fff;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  /* align-items: center; */
  flex-direction: column;
  font-weight: 550rpx;
  font-size: 20rpx;
  font-family: serif;
}
.item_wrap{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-bottom: 10rpx;
}
.item_wrap .item_title{
  width: 50%;
  font-size: 40rpx;
  background-color: #fff;
}
.item_content{
  width: 50%;
  font-size: 40rpx;
  background-color: #fff;
}
.item_value_content{
  color: #f00;
}
.clarify{
  margin-top: 80rpx;
  align-items:center;
  justify-content: center;
  display: flex;
  height: 200rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.clarify view{
  align-items:center;
  justify-content: center;
  background-color: #fff;
  font-size: 50rpx;
  font-family: serif;
  font-weight: 400;
  color: rgb(94, 89, 89); 
}
