
.select_product button{
  height: 100%;
  margin-top: 20rpx;
  background-color: rgb(57, 57, 204);
  border-radius: 20rpx;
  justify-content: center;
  align-items: center;
  color: rgb(224, 221, 221);
  font-weight: 580;
}
.select_product{
  margin: 20rpx;
  display: flex;
  flex-direction: column;
}
.select_product .user_info_wrap{
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  padding-left: 145rpx;

}
.wrap{
  display: flex;
  flex-direction: row;
  font-weight: 550rpx;
  font-size: 35rpx;
  font-family: serif;
  background-color: #fff;
}
.title{
  width: 245rpx;
  background-color: #fff;
  /* float: left; */
  /* background-color: #f00; */
  
}
.content{
  padding-left: 50rpx;
  background-color: #fff;
}
.btn_wrap{
  /* padding-left: 40rpx; */
  margin-top: 20rpx;
}

.select_product .user_info_wrap .btn_wrap navigator button{
  margin: 0;
}



.product_wrap{
  margin-top: 30rpx;
  display: flex;
  height: 400rpx;
}
.product_wrap .product_item{
  padding: 20rpx;
  border-radius: 20rpx;
  background-color: #fff;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-weight: 550rpx;
  font-size: 36rpx;
  font-family: serif;
}
.item_wrap{
  display: flex;
  flex-direction: row;

  margin-bottom: 10rpx;
}
.item_wrap .item_title{
  width: 180rpx;
  font-size: 40rpx;
  background-color: #fff;
}
.item_content{
  width: 180rpx;
  font-size: 40rpx;
  background-color: #fff;
}
.item_value_content{
  color: #f00;
}
.no_product{
  background-color: #fff;
  font-size: 40rpx;
}

.confirm_btn_wrap{
  margin-top: 50rpx;
}