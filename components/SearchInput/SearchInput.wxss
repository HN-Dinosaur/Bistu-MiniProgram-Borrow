.search{
  /* margin-top: 470rpx; */
  margin: 10rpx;
  display: flex;
}
.search .according_wrap{
  flex-direction: row;
  height: 90rpx;
  padding: 15rpx;
  background-color: #d3d4d6;
  /* background-color: #fff; */
  display: flex;
}
.search .according_wrap .input{
  width: 345rpx;
  /* background-color: #000; */
}
.search .according_wrap .input input{
  height: 100%;
  padding-left: 20rpx;
  margin-top: 15rpx;
  background-color: #fff;
  border-radius: 30rpx;
  color: #666;
}
.search .according_wrap .button_wrap{
  height: 100%;
  display: flex;
  flex-direction: row;
}
.search .according_wrap .button_wrap button{
  flex: 1;
  width: 100%;
  height: 100%;
  margin: 18rpx;
  margin-left: 18rpx;
  margin-right: 0;
  background-color: rgb(57, 57, 204);
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgb(224, 221, 221);
  font-weight: 580;
  
}